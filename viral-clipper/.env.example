# Database (SQLite for local Mac, no setup required)
DATABASE_URL=sqlite:///./data/clipper.db

# Redis (optional — not needed for local synchronous mode)
# REDIS_URL=redis://localhost:6379/0

# AI — REQUIRED: get your key from console.anthropic.com
CLAUDE_API_KEY=sk-ant-your-key-here

# Security — generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# Storage
STORAGE_BASE_PATH=./storage

# WhisperX (Mac CPU defaults)
WHISPERX_MODEL=base
WHISPERX_DEVICE=cpu
WHISPERX_COMPUTE_TYPE=int8
MAX_CONCURRENT_TRANSCRIPTIONS=1

# FFmpeg
FFMPEG_MAX_WORKERS=2

# Font (auto-detected on Mac — override if needed)
# FONT_PATH=/System/Library/Fonts/Supplemental/Arial Bold.ttf

# Playwright (set True after you've logged in to all accounts once)
PLAYWRIGHT_HEADLESS=false
